<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/azul">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="-2dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="154dp"
                android:layout_height="95dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="239dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textTipo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/inter_bold"
                    android:text="Laptop Gamer"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="239dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="2dp"
                    tools:layout_editor_absoluteY="-2dp">

                    <TextView
                        android:id="@+id/tiempoSolicitud"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/inter_semibold"
                        android:text="Tiempo de solicitud:"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tiempoSolicitudNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/inter_semibold"
                        android:text="8"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tiempoSolicitudDias"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/inter_semibold"
                        android:text="dÃ­as"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />

                </LinearLayout>


                <Button
                    android:id="@+id/button4"
                    android:layout_width="192dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="#D9D9D9"
                    android:fontFamily="@font/inter_semibold"
                    android:text="Ver detalles"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#2F2C2C" />






            </LinearLayout>

        </LinearLayout>

</androidx.cardview.widget.CardView>





