<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TI.Solicitudes_detalle">

    <TextView
        android:id="@+id/solicitud_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/inter_bold"
        android:text="Solicitud"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.133"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/solicitud_titulo"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_curso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:fontFamily="@font/inter_bold"
        android:text="Curso:"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_curso_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_curso_edit" />

    <TextView
        android:id="@+id/tv_estado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:text="Estado:"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_estado_edit"
        app:layout_constraintStart_toStartOf="@+id/tv_curso"
        app:layout_constraintTop_toTopOf="@+id/tv_estado_edit"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_marca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:text="Marca:"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_marca_edit"
        app:layout_constraintStart_toStartOf="@+id/tv_estado"
        app:layout_constraintTop_toTopOf="@+id/tv_marca_edit" />

    <TextView
        android:id="@+id/tv_motivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:text="Motivo:"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_motivo_edit"
        app:layout_constraintStart_toStartOf="@+id/tv_marca"
        app:layout_constraintTop_toTopOf="@+id/tv_motivo_edit" />

    <TextView
        android:id="@+id/tv_otros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:text="Otros:"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_otros_edit"
        app:layout_constraintStart_toStartOf="@+id/tv_motivo"
        app:layout_constraintTop_toTopOf="@+id/tv_otros_edit" />

    <TextView
        android:id="@+id/tv_programas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:text="Programas:"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_programas_edit"
        app:layout_constraintStart_toStartOf="@+id/tv_otros"
        app:layout_constraintTop_toTopOf="@+id/tv_programas_edit" />

    <TextView
        android:id="@+id/tv_tipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:text="Tipo:"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_tipo_edit"
        app:layout_constraintStart_toStartOf="@+id/tv_programas"
        app:layout_constraintTop_toTopOf="@+id/tv_tipo_edit"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_curso_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="112dp"
        android:fontFamily="@font/inter"
        android:text="TextView"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/tv_estado_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/inter"
        android:text="TextView"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_curso_edit"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tv_estado"
        app:layout_constraintTop_toBottomOf="@+id/tv_curso_edit" />

    <TextView
        android:id="@+id/tv_marca_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/inter"
        android:text="TextView"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_estado_edit"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tv_marca"
        app:layout_constraintTop_toBottomOf="@+id/tv_estado_edit" />

    <TextView
        android:id="@+id/tv_motivo_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/inter"
        android:text="TextView"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_marca_edit"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tv_motivo"
        app:layout_constraintTop_toBottomOf="@+id/tv_marca_edit" />

    <TextView
        android:id="@+id/tv_otros_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/inter"
        android:text="TextView"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_motivo_edit"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tv_motivo"
        app:layout_constraintTop_toBottomOf="@+id/tv_motivo_edit" />

    <TextView
        android:id="@+id/tv_programas_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/inter"
        android:text="TextView"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_otros_edit"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tv_motivo"
        app:layout_constraintTop_toBottomOf="@+id/tv_otros_edit" />

    <TextView
        android:id="@+id/tv_tipo_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/inter"
        android:text="TextView"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_programas_edit"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tv_motivo"
        app:layout_constraintTop_toBottomOf="@+id/tv_programas_edit" />

    <Button
        android:id="@+id/btn_solicitar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/negro"
        android:onClick="solicitarEquipo"
        android:text="Solicitar"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_tipo_edit" />

    <Button
        android:id="@+id/btn_cancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="#D9D9D9"
        android:onClick="cancelar"
        android:text="Cancelar"
        android:textAllCaps="false"
        android:textColor="@color/negro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_solicitar" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/menu_cliente"
        app:itemIconTint="@color/amarillo"
        android:background="@color/azul"
        app:labelVisibilityMode="auto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>